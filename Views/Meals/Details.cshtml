@model MealDesignerPRO.Models.Meal
@{ var refrigeratorList = (List<MealDesignerPRO.Models.Refrigerator>) ViewData["refrigeratorList"];}

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Meal</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalCalories)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalCalories)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalCarbs)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalCarbs)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalFat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalFat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Ingredient</th>
                    <th>Amount Needed</th>
                    <th>Amount In Fridge</th>
                </tr>
                @foreach (var item in Model.Recipe)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FoodItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => refrigeratorList.Find(x => x.FoodItemID.Equals(item.FoodItemID)).Quantity)
                        </td>
                    </tr>

                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
